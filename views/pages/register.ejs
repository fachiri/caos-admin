  <%- include('../partials/headerAuth'); %>
  <div id="auth">
    <div class="row h-100">
      <div class="col-lg-5 col-12">
        <div id="auth-left">
          <div class="auth-logo">
            <a href="<%= baseUrl %>">
              <!-- <img src="images/logo/logo.svg" alt="Logo" /> -->
              <span class="fs-4 fw-bold">SISAGIZ</span>
            </a>
            <p class="fs-5">Sistem Informasi Status Gizi</p>
          </div>
          <h1 class="auth-title">Register</h1>
          <p class="auth-subtitle mb-5">
            Masukkan data berikut untuk masuk ke website.
          </p>

          <form action="/auth/register" method="post" data-parsley-validate>
            <div class="form-group position-relative has-icon-left mb-4">
            <input
                type="text"
                class="form-control form-control-xl"
                placeholder="Full Name"
                name="name"
                data-parsley-required="true"
                minlength="3"
            />
            <div class="form-control-icon">
                <i class="bi bi-person"></i>
            </div>
            </div>
            <div class="form-group position-relative has-icon-left mb-4">
              <input
                type="email"
                class="form-control form-control-xl"
                placeholder="Email"
                name="email"
                data-parsley-required="true"
              />
              <div class="form-control-icon">
                <i class="bi bi-envelope"></i>
              </div>
            </div>
            <div class="form-group position-relative has-icon-left mb-4">
              <input
                id="password"
                type="password"
                class="form-control form-control-xl"
                placeholder="Password"
                name="password"
                data-parsley-required="true"
                minlength="8"
              />
              <div class="form-control-icon">
                <i class="bi bi-shield-lock"></i>
              </div>
            </div>
            <div class="form-group position-relative has-icon-left mb-4">
              <input
                type="password"
                class="form-control form-control-xl"
                placeholder="Confirm Password"
                name="password_repeat"
                data-parsley-required="true"
                data-parsley-equalto="#password"
                minlength="8"
              />
              <div class="form-control-icon">
                <i class="bi bi-shield-lock"></i>
              </div>
            </div>
            <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5" id="submitBtn" type="submit">
              Register
            </button>
            <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5 d-none" id="submitBtnSpinner" type="button" disabled>
              <span
                class="spinner-border spinner-border-sm"
                role="status"
                aria-hidden="true"
              ></span>
              Loading...
            </button>
          </form>
          <div class="text-center mt-5 text-lg fs-4">
            <p class="text-gray-600">
              Sudah punya akun?
              <a href="/login" class="font-bold">Login</a>
            </p>
          </div>
        </div>
      </div>
      <div class="col-lg-7 d-none d-lg-block">
        <div id="auth-right"></div>
      </div>
    </div>
  </div>
  <%- include('../partials/footerAuth'); %>
