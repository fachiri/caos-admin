        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h4>Pengukuran Terbaru</h4>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover table-lg">
                    <thead>
                      <tr>
                        <th>Nama</th>
                        <th>Tanggal</th>
                        <th>BB</th>
                        <th>TB</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(measure of measures) { %>
                      <tr>
                        <td class="col-3">
                          <div class="d-flex align-items-center">
                            <div class="avatar avatar-md">
                              <img src="images/faces/5.jpg" />
                            </div>
                            <p class="font-bold ms-3 mb-0"><%= measure.Toddler.name %></p>
                          </div>
                        </td>
                        <td class="col-auto">
                          <%= measure.date %>
                        </td>
                        <td class="col-auto">
                          <%= measure.bb %>
                        </td>
                        <td class="col-auto">
                          <%= measure.tb %>
                        </td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
                <div class="px-4">
                  <a
                    href="<%= `${baseUrl}/measurement` %> "
                    class="btn btn-block btn-xl btn-outline-primary font-bold mt-3"
                  >
                    Lainnya
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-3">
        <div class="card">
          <div class="card-body py-4 px-4">
            <div class="d-flex align-items-center">
              <div class="avatar avatar-xl">
                <img src="images/faces/1.jpg" alt="Face 1" />
              </div>
              <div class="ms-3 name">
                <h5 class="font-bold"><%= user.name %></h5>
                <h6 class="text-muted mb-0"><%= user.email.split('@')[0] %></h6>
                <small class="text-muted">@<%= user.email.split('@')[1] %></small>
              </div>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-header">
            <h4>Pengguna Terbaru</h4>
          </div>
          <div class="card-content pb-4">
            <% let i = 2; for(user of users.rows) { %> 
            <div class="recent-message d-flex px-4 py-3">
              <div class="avatar avatar-lg">
                <img src="images/faces/<%= i++ %>.jpg" />
              </div>
              <div class="name ms-4">
                <h5 class="mb-1"><%= user.name %></h5>
                <h6 class="text-muted mb-0"><%= user.email.split('@')[0] %></h6>
                <small class="text-muted">@<%= user.email.split('@')[1] %></small>
              </div>
            </div>
            <% } %> 
